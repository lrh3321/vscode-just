{
  "name": "just",
  "displayName": "just",
  "description": "Provides syntax and recipe launcher for Just scripts.",
  "version": "3.0.0",
  "publisher": "lrh3321",
  "private": true,
  "license": "MIT",
  "icon": "images/robot.png",
  "engines": {
    "vscode": "^1.75.0"
  },
  "keywords": [
    "just",
    "justfile",
    "make",
    "scripts",
    "task",
    "recipe",
    "launch"
  ],
  "repository": {
    "url": "https://github.com/lrh3321/vscode-just.git"
  },
  "bugs": {
    "url": "https://github.com/lrh3321/vscode-just/issues"
  },
  "homepage": "https://github.com/lrh3321/vscode-just",
  "categories": [
    "Programming Languages",
    "Snippets",
    "Other"
  ],
  "main": "./out/extension",
  "contributes": {
    "commands": [
      {
        "command": "just.run",
        "title": "%extension.runRecipe.title%",
        "category": "Just"
      },
      {
        "command": "just.enableCodeLens",
        "title": "%extension.enableCodeLens.title%",
        "category": "Just"
      },
      {
        "title": "%extension.disableCodelens.title%",
        "command": "just.disableCodeLens",
        "category": "Just"
      }
    ],
    "configuration": {
      "properties": {
        "just.enableCodeLens": {
          "type": "boolean",
          "default": true
        }
      }
    },
    "languages": [
      {
        "id": "just",
        "aliases": [
          "Just",
          "just"
        ],
        "extensions": [
          "justfile",
          ".justfile",
          "Justfile",
          "JUSTFILE",
          "*.justfile"
        ],
        "icon": {
          "dark": "./images/logo-dark.svg",
          "light": "./images/logo-light.svg"
        },
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "just",
        "scopeName": "source.just",
        "path": "./syntaxes/just.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "just",
        "path": "./snippets.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.3",
    "mocha": "^10.2.0",
    "prettier": "^3.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2",
    "vscode": "^1.1.37"
  },
  "dependencies": {
    "csv-parse": "^5.5.2",
    "execa": "~5.1.0"
  }
}
