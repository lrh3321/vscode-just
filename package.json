{
  "name": "just",
  "displayName": "just",
  "description": "Provides syntax and recipe launcher for Just scripts.",
  "version": "3.0.0",
  "publisher": "lrh3321",
  "private": true,
  "license": "MIT",
  "icon": "images/robot.png",
  "engines": {
    "vscode": "^1.80.0"
  },
  "keywords": [
    "just",
    "justfile",
    "make",
    "scripts",
    "task",
    "recipe",
    "launch"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/lrh3321/vscode-just.git"
  },
  "bugs": {
    "url": "https://github.com/lrh3321/vscode-just/issues"
  },
  "homepage": "https://github.com/lrh3321/vscode-just",
  "categories": [
    "Programming Languages",
    "Snippets",
    "Other"
  ],
  "main": "./out/extension",
  "contributes": {
    "commands": [
      {
        "command": "just.run",
        "title": "%extension.runRecipe.title%",
        "category": "Just"
      },
      {
        "command": "just.enableCodeLens",
        "title": "%extension.enableCodeLens.title%",
        "category": "Just"
      },
      {
        "command": "just.disableCodeLens",
        "title": "%extension.disableCodelens.title%",
        "category": "Just"
      }
    ],
    "configuration": {
      "properties": {
        "just.enableCodeLens": {
          "type": "boolean",
          "default": true,
          "title": "%extension.enableCodeLens.title%",
          "description": "%extension.enableCodeLens.description%"
        },
        "just.justExecutable": {
          "type": "string",
          "default": "just",
          "title": "$extension.justExecutable.title%",
          "description": "%extension.justExecutable.description%"
        }
      }
    },
    "languages": [
      {
        "id": "just",
        "aliases": [
          "Just",
          "just"
        ],
        "extensions": [
          "justfile",
          ".justfile",
          "Justfile",
          "JUSTFILE",
          ".just",
          ".justfile"
        ],
        "icon": {
          "dark": "./images/logo-dark.svg",
          "light": "./images/logo-light.svg"
        },
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "just",
        "scopeName": "source.just",
        "path": "./syntaxes/just.tmLanguage.json"
      }
    ],
    "taskDefinitions": [
      {
        "type": "just",
        "properties": {
          "recipe": {
            "type": "string",
            "default": "",
            "description": "The recipe name"
          },
          "justfile": {
            "type": "string",
            "description": "The justfile containing the recipe",
            "default": "Justfile",
            "examples": [
              "Justfile",
              "justfile",
              ".justfile"
            ]
          },
          "workingDirectory": {
            "type": "string",
            "description": "The working directory",
            "default": "${workspaceFolder}",
            "examples": [
              "${workspaceFolder}",
              "./"
            ]
          },
          "variables": {
            "type": "object",
            "description": "Override <VARIABLE> with <VALUE>",
            "additionalProperties": {
              "type": "string"
            }
          },
          "args": {
            "type": "array",
            "description": "Override <VARIABLE> with <VALUE>",
            "items": {
              "type": "string"
            }
          },
          "kwargs": {
            "type": "object",
            "description": "Override <VARIABLE> with <VALUE>",
            "additionalProperties": {
              "type": "string"
            }
          },
          "starParameter": {
            "type": "array",
            "description": "Override variadic <VARIABLE> with <VALUE>",
            "items": {
              "type": "string"
            }
          },
          "shell": {
            "type": "string",
            "description": "Invoke <SHELL> to run recipes"
          },
          "shellArgs": {
            "type": "array",
            "description": "Invoke shell with <SHELL-ARG> as an argument",
            "items": {
              "type": "string"
            }
          }
        },
        "required": [
          "recipe"
        ]
      }
    ],
    "snippets": [
      {
        "language": "just",
        "path": "./snippets.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint ./src",
    "lint-fix": "eslint ./src --fix",
    "test": "npm run compile && node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "^18.7.14",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^8.55.0",
    "glob": "^8.1.0",
    "js-yaml": "^4.1.0",
    "mocha": "^10.2.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "antlr4": "^4.13.1-patch-1",
    "csv-parse": "^5.5.2"
  }
}
